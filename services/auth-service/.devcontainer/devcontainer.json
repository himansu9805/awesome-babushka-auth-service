{
  "name": "Auth Service",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [],
  "postCreateCommand": "pip3 install --user -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-azuretools.vscode-docker",
        "ms-python.vscode-pylance",
        "ms-python.autopep8",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort",
        "ms-python.pylint",
        "GitHub.copilot",
        "tal7aouy.icons",
        "EchoAPI.echoapi-for-vscode"
      ]
    }
  },
  "remoteUser": "root",
  "workspaceMount": "source=${localWorkspaceFolder}/../..,target=/workspaces/awesome-babushka,type=bind",
  "workspaceFolder": "/workspaces/awesome-babushka/services/auth-service"
}